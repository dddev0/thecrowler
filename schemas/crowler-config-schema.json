{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "remote": {
            "type": "object",
            "properties": {
                "host": {
                    "type": "string"
                },
                "path": {
                    "type": "string"
                },
                "port": {
                    "type": "integer"
                },
                "region": {
                    "type": "string"
                },
                "token": {
                    "type": "string"
                },
                "secret": {
                    "type": "string"
                },
                "timeout": {
                    "type": "integer"
                },
                "type": {
                    "type": "string"
                },
                "sslmode": {
                    "type": "string"
                }
            },
            "required": [
                "host",
                "path",
                "port",
                "type"
            ]
        },
        "database": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string"
                },
                "host": {
                    "type": "string"
                },
                "port": {
                    "type": "integer"
                },
                "user": {
                    "type": "string"
                },
                "password": {
                    "type": "string"
                },
                "dbname": {
                    "type": "string"
                },
                "retry_time": {
                    "type": "integer"
                },
                "ping_time": {
                    "type": "integer"
                },
                "sslmode": {
                    "type": "string"
                }
            },
            "required": [
                "type",
                "host",
                "port",
                "user",
                "password",
                "dbname"
            ]
        },
        "crawler": {
            "type": "object",
            "properties": {
                "workers": {
                    "type": "integer"
                },
                "interval": {
                    "type": "string"
                },
                "timeout": {
                    "type": "integer"
                },
                "maintenance": {
                    "type": "integer"
                },
                "source_screenshot": {
                    "type": "boolean"
                },
                "full_site_screenshot": {
                    "type": "boolean"
                },
                "max_depth": {
                    "type": "integer"
                },
                "max_sources": {
                    "type": "integer"
                },
                "delay": {
                    "type": "string"
                }
            }
        },
        "api": {
            "type": "object",
            "properties": {
                "host": {
                    "type": "string"
                },
                "port": {
                    "type": "integer"
                },
                "timeout": {
                    "type": "integer"
                },
                "content_search": {
                    "type": "boolean"
                },
                "return_content": {
                    "type": "boolean"
                },
                "sslmode": {
                    "type": "string"
                },
                "cert_file": {
                    "type": "string"
                },
                "key_file": {
                    "type": "string"
                },
                "rate_limit": {
                    "type": "string"
                },
                "enable_console": {
                    "type": "boolean"
                },
                "return_404": {
                    "type": "boolean"
                }
            },
            "required": [
                "host",
                "port",
                "timeout"
            ]
        },
        "selenium": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "path": {
                        "type": "string"
                    },
                    "driver_path": {
                        "type": "string"
                    },
                    "type": {
                        "type": "string"
                    },
                    "port": {
                        "type": "integer"
                    },
                    "host": {
                        "type": "string"
                    },
                    "headless": {
                        "type": "boolean"
                    },
                    "use_service": {
                        "type": "boolean"
                    },
                    "sslmode": {
                        "type": "string"
                    }
                },
                "required": [
                    "type",
                    "path",
                    "port",
                    "host"
                ]
            }
        },
        "image_storage": {
            "type": "object",
            "properties": {
                "host": {
                    "type": "string"
                },
                "path": {
                    "type": "string"
                },
                "port": {
                    "type": "integer"
                },
                "region": {
                    "type": "string"
                },
                "token": {
                    "type": "string"
                },
                "secret": {
                    "type": "string"
                },
                "timeout": {
                    "type": "integer"
                },
                "type": {
                    "type": "string"
                },
                "sslmode": {
                    "type": "string"
                }
            },
            "required": [
                "path",
                "type"
            ]
        },
        "file_storage": {
            "type": "object",
            "properties": {
                "host": {
                    "type": "string"
                },
                "path": {
                    "type": "string"
                },
                "port": {
                    "type": "integer"
                },
                "region": {
                    "type": "string"
                },
                "token": {
                    "type": "string"
                },
                "secret": {
                    "type": "string"
                },
                "timeout": {
                    "type": "integer"
                },
                "type": {
                    "type": "string"
                },
                "sslmode": {
                    "type": "string"
                }
            },
            "required": [
                "path",
                "type"
            ]
        },
        "network_info": {
            "type": "object",
            "properties": {
                "dns": {
                    "type": "object",
                    "properties": {
                        "enabled": {
                            "type": "boolean"
                        },
                        "timeout": {
                            "type": "integer"
                        },
                        "rate_limit": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "enabled"
                    ]
                },
                "whois": {
                    "type": "object",
                    "properties": {
                        "enabled": {
                            "type": "boolean"
                        },
                        "timeout": {
                            "type": "integer"
                        },
                        "rate_limit": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "enabled"
                    ]
                },
                "netlookup": {
                    "type": "object",
                    "properties": {
                        "enabled": {
                            "type": "boolean"
                        },
                        "timeout": {
                            "type": "integer"
                        },
                        "rate_limit": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "enabled"
                    ]
                },
                "geo_localization": {
                    "type": "object",
                    "properties": {
                        "enabled": {
                            "type": "boolean"
                        },
                        "path": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "enabled",
                        "path"
                    ]
                },
                "service_scout": {
                    "type": "object",
                    "properties": {
                      "enabled": {
                        "type": "boolean"
                      },
                      "timeout": {
                        "type": "integer"
                      },
                      "ping_scan": {
                        "type": "boolean"
                      },
                      "connect_scan": {
                        "type": "boolean"
                      },
                      "syn_scan": {
                        "type": "boolean"
                      },
                      "udp_scan": {
                        "type": "boolean"
                      },
                      "no_dns_resolution": {
                        "type": "boolean"
                      },
                      "service_detection": {
                        "type": "boolean"
                      },
                      "os_finger_print": {
                        "type": "boolean"
                      },
                      "aggressive_scan": {
                        "type": "boolean"
                      },
                      "script_scan": {
                        "type": "array",
                        "items": {
                          "type": "string"
                        }
                      },
                      "targets": {
                        "type": "array",
                        "items": {
                          "type": "string"
                        }
                      },
                      "excluded_hosts": {
                        "type": "array",
                        "items": {
                          "type": "string"
                        }
                      },
                      "timing_template": {
                        "type": "string"
                      },
                      "host_timeout": {
                        "type": "string"
                      },
                      "min_rate": {
                        "type": "string"
                      },
                      "max_retries": {
                        "type": "integer"
                      },
                      "source_port": {
                        "type": "integer"
                      },
                      "interface": {
                        "type": "string"
                      },
                      "spoof_ip": {
                        "type": "string"
                      },
                      "randomize_hosts": {
                        "type": "boolean"
                      },
                      "data_length": {
                        "type": "integer"
                      },
                      "delay": {
                        "type": "string"
                      },
                      "mtu_discovery": {
                        "type": "boolean"
                      },
                      "scan_flags": {
                        "type": "string"
                      }
                    },
                    "required": [
                      "enabled"
                    ]
                  }
                }
            }
        },
        "rulesets": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "path": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "host": {
                        "type": "string"
                    },
                    "port": {
                        "type": "string"
                    },
                    "region": {
                        "type": "string"
                    },
                    "token": {
                        "type": "string"
                    },
                    "secret": {
                        "type": "string"
                    },
                    "timeout": {
                        "type": "integer"
                    },
                    "type": {
                        "type": "string"
                    },
                    "sslmode": {
                        "type": "string"
                    },
                    "refresh": {
                        "type": "integer"
                    }
                },
                "required": [
                    "path",
                    "type"
                ]
            }
        },
        "os": {
            "type": "string"
        },
        "debug_level": {
            "type": "integer"
        }
    },
    "anyOf": [
        {
            "required": [
                "remote"
            ]
        },
        {
            "required": [
                "database",
                "crawler",
                "api",
                "selenium",
                "network_info"
            ]
        }
    ]
}
