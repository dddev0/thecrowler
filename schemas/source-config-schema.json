{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
      "format_version": { "type": "string" },
      "author": { "type": "string" },
      "created_at": { "type": "string", "format": "date-time" },
      "description": { "type": "string" },
      "source_name": { "type": "string" },
      "crawling_config": {
        "type": "object",
        "properties": {
          "site": { "type": "string", "format": "uri" }
        },
        "required": ["site"]
      },
      "execution_plan": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "label": { "type": "string" },
            "conditions": {
              "type": "object",
              "properties": {
                "url_patterns": {
                  "type": "array",
                  "items": { "type": "string", "format": "uri-template" }
                }
              },
              "required": ["url_patterns"]
            },
            "rule_groups": {
              "type": "array",
              "items": { "type": "string" }
            },
            "rules": {
              "type": "array",
              "items": { "type": "string" }
            },
            "additional_conditions": {
              "type": "object",
              "additionalProperties": true
            }
          },
          "required": ["label", "conditions"]
        }
      }
    },
    "required": ["format_version", "source_name", "crawling_config", "execution_plan"]
  }
